<div class="row">
    <div class="col-md-3">
        <%= render 'room_menu' %> 
    </div>
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                Description
            </div>

            <div class="panel-body">
                <div class="container">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-6"/>
                            <%= form_for @room do |f| %>
                                <div class="row">
                                    <div class="form-group">
                                        <label>Listing Name</label>
                                        <%= f.text_field :listing_name, placeholder: 'Enter Listing Name Here', class:'form-control'%>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-group">
                                        <label>Summary</label>
                                        <%= f.text_area :listing_name, rows: 5, placeholder: 'Enter Listing Description Here', class:'form-control'%>
                                    </div>
                                </div>

                                <div class="text-center">
                                        <%= f.submit "Save", class: 'btn btn-normal' %>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
